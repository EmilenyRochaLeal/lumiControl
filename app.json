{
  "expo": {
    "name": "lumiControl",
    "slug": "lumiControl",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/LuzLed.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "permissions": ["SYSTEM_BRIGHTNESS"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/LuzLed.png",
        "backgroundColor": "#000"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/svg/lumiControl.svg",
      "backgroundColor": "#000"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/svg/LumiControl.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1D242B"
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Permitir que o lumiControl acesse os sensores de luminosidade do seu dispositivo"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
